{#
/**
 * @file
 * The views infinite scroll pager template.
 */
#}

{% if items.next %}
<div class="infinite-scroll-wrapper">
  <ul{{ attributes }}>
    <li class="pager__item">
      <a class="button" href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next">{{ options.button_text }}</a>
    </li>
  </ul>
</div>
{% endif %}
